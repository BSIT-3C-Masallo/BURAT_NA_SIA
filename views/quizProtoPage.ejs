<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trivia Quiz</title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<style>
     body {
        background-color: #f4f4f4;
        color: #333;
        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow: hidden;
        background-image: url("/images/sumeru-genshin-impact-thumb.jpg");
        background-repeat: no-repeat; 
    }

    #sidebar {
        position: fixed;
        width: 250px;
        height: 100%;
        background: linear-gradient(to right, #4A4A4A, #767676);
        padding-top: 20px;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
        transition: width 0.3s;
        overflow-y: auto;
    }

    #sidebar a {
        padding: 15px 20px;
        text-decoration: none;
        color: #fdf6ff;
        display: block;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    #sidebar a:hover {
        background-color: #988ab5;
    }

    #content {
        margin-left: 260px;
        padding: 150px;
        flex-grow: 1;
        overflow-x: auto;
        height: 100vh;
        transition: margin-left 0.3s;
        
    }

    #toggle-button {
        position: fixed;
        left: 10px;
        top: 20px;
        cursor: pointer;
        z-index: 1000;
        background-color: #fff;
        border: none;
        border-radius: 50%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        padding: 10px;
    }

    #quiz-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #007bff;
    }

    footer {
        text-align: center;
        padding: 20px 0;
        background-color: #2b4c39; 
        color: #fdf6ff;
        position: absolute;
        width: 100%;
        bottom: 0;
    }

    footer a {
        color: #fdf6ff;
        margin: 0 10px;
        text-decoration: none;
    }

    .social-icons a {
        margin: 0 10px;
        color: #fdf6ff;
        font-size: 24px;
    }
</style>
<body>

    <div id="toggle-button" class="btn">
        <i class="fas fa-arrow-left"></i>
    </div>
    
    <div id="sidebar" class="active">
        <h4 class="text-center" style="color: #fdf6ff;">Menu</h4><br>
        <a href="http://localhost:3000/index">Home</a>
        <a href="http://localhost:3000/infoGenKnowledge">History</a>
        <a href="http://localhost:3000/aboutUs">About Us</a>
    </div>
    
    <div id="content">
            <form id="quiz-form" action="/quizProtoPage/submit" method="POST">
            <div class="container" id="quiz-container">
                <h1>General Knowledge Quiz</h1>
        
                <% questions.forEach(question => { %>
                <div id="question-container" class="card p-4 mt-4">
                    <div id="question" class="question">
                        <p><%- question.question %></p>
                    </div>
                    <div id="answers" class="answers">
                        <% question.answers.forEach((answer) => { %>
                            <label>
                                <input type="radio" name="answer<%= question.id %>" value="<%= answer %>">
                                <%- answer %>
                            </label>
                        <% }); %>
                    </div>
                </div>
                <% }); %>
        
                <!-- Submit Button -->
                <button type="submit" class="btn btn-success mt-4">Submit Quiz</button>
            </div>
        </form>
    </div>
    
    <footer>
        <div class="footer-container">
			<p>&copy; 2024 Quizzes. All rights reserved.</p>
			<div class="social-icons">
				<a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-square"></i></a>
				<a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
				<a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
			</div>
		</div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const toggleButton = document.getElementById('toggle-button');
    const sidebar = document.getElementById('sidebar');
    const content = document.getElementById('content');

    toggleButton.addEventListener('click', function () {
        if (sidebar.classList.contains('active')) {
            sidebar.style.width = '0';
            content.style.marginLeft = '10px'; // Adjust content margin
            toggleButton.innerHTML = '<i class="fas fa-arrow-right"></i>'; // Change icon
        } else {
            sidebar.style.width = '250px';
            content.style.marginLeft = '260px'; // Reset content margin
            toggleButton.innerHTML = '<i class="fas fa-arrow-left"></i>'; // Change icon
        }
        sidebar.classList.toggle('active'); // Toggle active class
    });
</script>
    
    </body> 
    </html>